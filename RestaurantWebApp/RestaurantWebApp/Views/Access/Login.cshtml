
@{
    ViewBag.Title = "Login";
    ViewBag.Layout = "~/Views/Shared/_LayoutLogin";
}

<h2>Login</h2>

<div class="row">

    <div class="danger">
        @ViewBag.Error
    </div>

    <form action="@Url.Content("~/Access/Login")" method="post">



        <div class="form-group">
            <label>Usuario</label>
            <input type="email" name="user" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" />
        </div>

       
        <input type="submit" value="Acceder..." class="btn btn-success" />
        

    </form>

</div>
